{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es2020",
      "outDir": "dist",
      "esModuleInterop": true,
      "resolveJsonModule": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      "_warmup/**/*",
      ".vscode/**/*"
    ]
}